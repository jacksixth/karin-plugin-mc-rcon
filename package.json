{
  "name": "karin-plugin-mc-rcon",
  "version": "1.13.0",
  "author": "jack",
  "type": "module",
  "description": "karin-plugin 连接群聊和mc服务器,可查询服务器状态。管理员可通过 rcon 命令管理服务器。 ",
  "homepage": "https://github.com/jacksixth/karin-plugin-mc-rcon",
  "bugs": {
    "url": "https://github.com/jacksixth/karin-plugin-mc-rcon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacksixth/karin-plugin-mc-rcon.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "pub": "npm publish --access public",
    "dev": "tsx watch --include \"src/**/*.ts\" src/index.ts",
    "pr": "node lib/cli/pr.js"
  },
  "main": "lib/index.js",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "eslint": "^9.39.2",
    "neostandard": "^0.11.9",
    "node-karin": "latest",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@minescope/mineping": "^1.6.1",
    "rcon-client": "^4.2.5"
  },
  "karin": {
    "main": "src/index.ts",
    "apps": [
      "lib/apps"
    ],
    "ts-apps": [
      "src/apps"
    ],
    "web": "./lib/web.config.js",
    "ts-web": "./src/web.config.ts",
    "static": [
      "resources"
    ],
    "files": [
      "config",
      "data"
    ]
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/config/config/*.json",
    "/config/config/*.d.ts",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}